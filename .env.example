# ============================================
# APLICACIÓN
# ============================================
NODE_ENV=development
PORT=4000
API_PREFIX=/api/v1

# ============================================
# BASE DE DATOS - POSTGRESQL
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=restaurant_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=change_this_secure_password

# ============================================
# REDIS (Cache & Queue)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# AUTENTICACIÓN - JWT
# ============================================
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_change_this
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_refresh_secret_key_minimum_32_characters_change_this
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# ============================================
# UPLOADS
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# ============================================
# STRIPE (Pagos con Tarjeta)
# https://stripe.com
# ============================================
STRIPE_SECRET_KEY=sk_test_
STRIPE_PUBLISHABLE_KEY=pk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# ============================================
# MERCADOPAGO (Pagos - Latinoamérica)
# https://mercadopago.com
# ============================================
MERCADOPAGO_ACCESS_TOKEN=TEST-
MERCADOPAGO_PUBLIC_KEY=TEST-

# ============================================
# PAYPAL (Pagos)
# https://paypal.com
# ============================================
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# ============================================
# TWILIO (SMS)
# https://twilio.com
# ============================================
TWILIO_ACCOUNT_SID=AC
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=+

# ============================================
# WHATSAPP BUSINESS API
# https://business.whatsapp.com
# ============================================
WHATSAPP_API_URL=https://graph.facebook.com/v17.0
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=

# ============================================
# SENDGRID (Email)
# https://sendgrid.com
# ============================================
SENDGRID_API_KEY=SG.
SENDGRID_FROM_EMAIL=noreply@turestaurante.com
SENDGRID_FROM_NAME=Tu Restaurante

# ============================================
# FIREBASE (Push Notifications)
# https://console.firebase.google.com
# ============================================
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ============================================
# GOOGLE MAPS API
# https://console.cloud.google.com
# ============================================
GOOGLE_MAPS_API_KEY=AIza

# ============================================
# AWS S3 (Storage)
# https://aws.amazon.com/s3
# ============================================
AWS_ACCESS_KEY_ID=AKIA
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=restaurant-assets

# ============================================
# CLOUDINARY (Alternativa a S3)
# https://cloudinary.com
# ============================================
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============================================
# FACTURACIÓN ELECTRÓNICA
# ============================================

# Argentina - AFIP
# https://www.afip.gob.ar
AFIP_CUIT=
AFIP_CERT_PATH=./certs/afip.crt
AFIP_KEY_PATH=./certs/afip.key
AFIP_ENVIRONMENT=testing

# México - SAT
# https://www.sat.gob.mx
CFDI_RFC=
CFDI_CERTIFICATE_PATH=./certs/cfdi.cer
CFDI_KEY_PATH=./certs/cfdi.key

# Perú - SUNAT
# https://www.sunat.gob.pe
SUNAT_RUC=
SUNAT_USERNAME=
SUNAT_PASSWORD=
SUNAT_ENVIRONMENT=testing

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FORMAT=pretty

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# SESIONES
# ============================================
SESSION_SECRET=change_this_session_secret_min_32_chars

# ============================================
# URLS
# ============================================
API_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000
KDS_URL=http://localhost:3001
POS_URL=http://localhost:3002

# ============================================
# OPCIONES DE PRODUCCIÓN
# ============================================
# Descomentar solo en producción

# ENABLE_HTTPS=true
# SSL_CERT_PATH=./certs/ssl.crt
# SSL_KEY_PATH=./certs/ssl.key

# SENTRY_DSN=
# NEW_RELIC_LICENSE_KEY=

# ============================================
# BASE DE DATOS (Producción)
# ============================================
# Descomentar para usar conexión SSL en producción

# POSTGRES_SSL=true
# POSTGRES_SSL_REJECT_UNAUTHORIZED=false
# POSTGRES_CA_CERT=./certs/postgres-ca.crt

# ============================================
# MONGODB (Opcional - para Logs/Analytics)
# ============================================
MONGODB_URI=mongodb://localhost:27017/restaurant_logs
MONGODB_USER=
MONGODB_PASSWORD=

# ============================================
# ELASTICSEARCH (Opcional - para búsquedas)
# ============================================
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# ============================================
# FEATURES FLAGS
# ============================================
ENABLE_LOYALTY_PROGRAM=true
ENABLE_RESERVATIONS=true
ENABLE_ONLINE_ORDERING=true
ENABLE_INVENTORY_MANAGEMENT=true
ENABLE_ANALYTICS=true

# ============================================
# CONFIGURACIÓN REGIONAL
# ============================================
DEFAULT_TIMEZONE=America/Argentina/Buenos_Aires
DEFAULT_CURRENCY=ARS
DEFAULT_LOCALE=es-AR
DEFAULT_TAX_RATE=21.00

# ============================================
# LÍMITES Y RESTRICCIONES
# ============================================
MAX_ORDERS_PER_DAY=1000
MAX_DELIVERY_DISTANCE_KM=10
MAX_TABLE_CAPACITY=20

# ============================================
# CRON JOBS
# ============================================
ENABLE_CRON_JOBS=true
CRON_CLEANUP_OLD_LOGS=0 2 * * *
CRON_GENERATE_DAILY_REPORTS=0 23 * * *
CRON_BACKUP_DATABASE=0 3 * * *

# ============================================
# TESTING
# ============================================
# Usar solo en ambiente de testing

# TEST_POSTGRES_DB=restaurant_test_db
# SKIP_EMAIL_VERIFICATION=true
# MOCK_PAYMENTS=true
# MOCK_SMS=true
